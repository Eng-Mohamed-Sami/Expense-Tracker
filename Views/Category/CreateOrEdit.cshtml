@model Expence_Tracker.Models.Category

@{
	// ViewData["Title"] = "Create";
	   ViewData["PageTitle"] = Model.Id==0? "Create" : "Edit";
}
<div class="row">
    <div class="col-md-7">
		<div class="widget p-5" style="background-color:#212b36">
			<form asp-action="CreateOrEdit" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" name="Id" value="@Model.Id" />
				<div class="mb-3">
					<div class='e-btn-group custom-rbt-group'>
						<input type="radio" id="radioleft" name="Type" value="Expense" checked="@(Model.Type=="Expense")" />
						<label class="e-btn" for="radioleft">Expense</label>
						<input type="radio" id="radiomiddle" name="Type" value="Income" checked="@(Model.Type=="Income")" />
						<label class="e-btn" for="radiomiddle">Income</label>
					</div>
				</div>
				<div class="mb-3">
					<ejs-textbox id="Title" placeholder="Title" ejs-for="@Model.Title" floatLabelType="Always"></ejs-textbox>
					<span asp-validation-for="Title" class="text-danger fs-6"></span>
				</div>

				<div class="mb-3">
					<ejs-textbox id="Icone" placeholder="Icone" ejs-for="@Model.Icone" floatLabelType="Always"></ejs-textbox>
					<span asp-validation-for="Icone" class="text-danger fs-6"></span>
				</div>

				<ejs-button id="submit" type="submit" content="Submit" cssClass="e-success" ></ejs-button>
				@section Scripts
				{
					@* <script src="/lib/jquery/dist/jquery.min.js"></script> *@
					<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
					<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
				}
			</form>
        </div>
    </div>
	<div class="col-md-5">
		<div class="widget h-100 d-flex justify-content-center align-items-center" >
			<i class="fa-solid fa-shapes fa-2xl"></i>
		</div>
	</div>
</div>

